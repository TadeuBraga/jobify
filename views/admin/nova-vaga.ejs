
<%- include('header') %>
        <h2>
            Nova Vaga:
            <a href="/admin/vagas">Vagas</a>
        </h2>
        <div>
            <form method="POST" action="<%- vaga.id != null ? '/admin/vagas/editar/'+vaga.id : '/admin/vagas/nova' %>">
                <label>Titulo</label>
                <input type="text" name="titulo" value="<%- vaga.titulo %>">
                <br>
                <label>Descrição</label>
                <textarea name="descricao"><%- vaga.descricao%></textarea>
                <br>
                <label>Categoria da Vaga</label>
                <select name="categoria">
                    <% categorias.forEach(categoria => {%>
                        <option value="<%- categoria.id %>" <%-vaga.categoria_id == categoria.id ? 'selected' : ''%> ><%- categoria.categoria %></option>
                    <%})%>
                    
                </select>
                <br>
                <button type="submit">Salvar vaga</button>
                <br>

            </form>
            
        </div> 
<%- include('footer') %>
